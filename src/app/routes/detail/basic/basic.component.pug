page-header([autoBreadcrumb]="false")
nz-card([nzHoverable]="true", [nzBordered]="false")
  sv-container.mb-lg(size="large", title="退款申请")
    sv(label="取货单号") 1000000000
    sv(label="状态") 已取货
    sv(label="销售单号") 1234123421
    sv(label="子订单") 3214321432
  nz-divider.mb-lg
  sv-container.mb-lg(size="large", title="用户信息")
    sv(label="联系电话") 18100000000
    sv(label="常用快递") 菜鸟仓储
    sv(label="取货地址") 浙江省杭州市西湖区万塘路18号
    sv(label="备注") 无
  nz-divider.mb-lg
  .text-md.font-weight-bold.mb-md 退货商品
  st([data]="goods", [columns]="goodsColumns")
    ng-template(#body="")
      tr(nz-tbody-tr="")
        td(nz-td="") 合计
        td(nz-td="")
        td(nz-td="")
        td(nz-td="")
        td.text-right(nz-td="")
          strong {{basicNum}}
        td.text-right(nz-td="")
          strong {{amountNum}}
  .text-md.font-weight-bold.my-md 退货进度
  st([data]="progress", [columns]="progressColumns")
    ng-template(st-row="status", let-i="")
      nz-badge(*ngIf="i.status === 'success'",
        [nzStatus]="'success'",
        [nzText]="'成功'")
      nz-badge(*ngIf="i.status !== 'success'",
        [nzStatus]="'processing'",
        [nzText]="'进行中'")
