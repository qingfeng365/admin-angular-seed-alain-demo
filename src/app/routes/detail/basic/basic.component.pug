page-header([autoBreadcrumb]="false")
nz-card([nzHoverable]="true", [nzBordered]="false")
  desc-list.mb-lg(size="large", title="退款申请")
    desc-list-item(term="取货单号") 1000000000
    desc-list-item(term="状态") 已取货
    desc-list-item(term="销售单号") 1234123421
    desc-list-item(term="子订单") 3214321432
  nz-divider.mb-lg
  desc-list.mb-lg(size="large", title="用户信息")
    desc-list-item(term="联系电话") 18100000000
    desc-list-item(term="常用快递") 菜鸟仓储
    desc-list-item(term="取货地址") 浙江省杭州市西湖区万塘路18号
    desc-list-item(term="备注") 无
  nz-divider.mb-lg
  .text-md.font-weight-bold.mb-md 退货商品
  simple-table([data]="goods", [columns]="goodsColumns")
    ng-template(#body="")
      tr(nz-tbody-tr="")
        td(nz-td="") 合计
        td(nz-td="")
        td(nz-td="")
        td(nz-td="")
        td.text-right(nz-td="")
          strong {{basicNum}}
        td.text-right(nz-td="")
          strong {{amountNum}}
  .text-md.font-weight-bold.my-md 退货进度
  simple-table([data]="progress", [columns]="progressColumns")
    ng-template(st-row="status", let-i="")
      nz-badge(*ngIf="i.status === 'success'",
        [nzStatus]="'success'",
        [nzText]="'成功'")
      nz-badge(*ngIf="i.status !== 'success'",
        [nzStatus]="'processing'",
        [nzText]="'进行中'")
